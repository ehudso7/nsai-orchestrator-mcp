# Frontend Environment Variables for NSAI Orchestrator MCP
# Copy this file to .env.local for local development

# ============================================================================
# API Configuration
# ============================================================================

# Backend API URL (FastAPI server)
NEXT_PUBLIC_API_URL=http://localhost:8000

# WebSocket URL for real-time features
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# ============================================================================
# Application Configuration
# ============================================================================

# Application metadata
NEXT_PUBLIC_APP_NAME=NSAI Orchestrator MCP
NEXT_PUBLIC_APP_VERSION=1.0.0
NEXT_PUBLIC_APP_DESCRIPTION=Production-grade multi-agent orchestration platform

# Environment (development, staging, production)
NEXT_PUBLIC_ENVIRONMENT=development

# ============================================================================
# Feature Flags
# ============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_WEBSOCKETS=true
NEXT_PUBLIC_ENABLE_REAL_TIME_UPDATES=true
NEXT_PUBLIC_ENABLE_DARK_MODE=true

# ============================================================================
# External Services (Optional)
# ============================================================================

# Analytics (if enabled)
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_MIXPANEL_TOKEN=

# Error Reporting (if enabled)
NEXT_PUBLIC_SENTRY_DSN=

# Authentication (if using third-party auth)
NEXT_PUBLIC_AUTH0_DOMAIN=
NEXT_PUBLIC_AUTH0_CLIENT_ID=

# ============================================================================
# Development Configuration
# ============================================================================

# Development features
NEXT_PUBLIC_SHOW_DEBUG_INFO=false
NEXT_PUBLIC_MOCK_API=false

# ============================================================================
# Production Configuration (Vercel)
# ============================================================================

# For Vercel deployment, set these environment variables in Vercel dashboard:
# NEXT_PUBLIC_API_URL=https://your-backend-api.com
# NEXT_PUBLIC_WS_URL=wss://your-backend-api.com
# NEXT_PUBLIC_ENVIRONMENT=production
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_ERROR_REPORTING=true
