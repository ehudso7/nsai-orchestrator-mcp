# NSAI Orchestrator MCP - Environment Configuration

# Application Settings
APP_NAME="NSAI Orchestrator MCP"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG="false"
HOST="0.0.0.0"
PORT="4141"
WORKERS="1"

# Security Configuration (REQUIRED)
SECRET_KEY="your-super-secret-key-change-this-in-production"
JWT_SECRET="your-jwt-secret-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRE_MINUTES="30"
BCRYPT_ROUNDS="12"

# Rate Limiting
RATE_LIMIT_PER_MINUTE="60"
RATE_LIMIT_BURST="100"

# CORS Origins (comma-separated)
CORS_ORIGINS="http://localhost:3000,https://localhost:3000"

# Database Configuration
REDIS_HOST="redis"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_MAX_CONNECTIONS="20"

NEO4J_URI="bolt://neo4j:7687"
NEO4J_USER="neo4j"
NEO4J_PASSWORD="password"
NEO4J_MAX_CONNECTION_LIFETIME="300"
NEO4J_MAX_CONNECTION_POOL_SIZE="50"

# API Keys (REQUIRED)
ANTHROPIC_API_KEY="your-anthropic-api-key"
OPENAI_API_KEY="your-openai-api-key"

# API Configuration
DEFAULT_TIMEOUT="30"
MAX_RETRIES="3"
RETRY_DELAY="1.0"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="json"  # json, console

# Performance
ENABLE_GZIP="true"
MAX_REQUEST_SIZE="16777216"  # 16MB

# Memory Settings
MEMORY_TTL_SECONDS="3600"  # 1 hour
MEMORY_MAX_ENTRIES="10000"

# WebSocket Settings
WEBSOCKET_PING_INTERVAL="20"
WEBSOCKET_PING_TIMEOUT="10"

# Monitoring & Metrics
ENABLE_METRICS="true"
METRICS_PATH="/metrics"

# SSL/TLS (for production)
SSL_CERT_PATH=""
SSL_KEY_PATH=""
SSL_CA_PATH=""

# External Services
SENTRY_DSN=""
PROMETHEUS_GATEWAY=""

# Feature Flags
ENABLE_MEMORY_GRAPH_VISUALIZATION="true"
ENABLE_REAL_TIME_LOGS="true"
ENABLE_AGENT_PLUGINS="true"
ENABLE_SESSION_REPLAY="false"